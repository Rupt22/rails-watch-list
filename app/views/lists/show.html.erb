<h1>This is <%= @list.name %> <h1>
  <div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <ul class="list-group mb-3">
        <% @list.movies.each do |movie| %>
          <li class="list-group-item">
            <%= movie.title %>
            <%= movie.overview%>
            <%= image_tag movie.poster_url%> 
          </li>
        <% end %>
      </ul>
    <%= link_to "Add a film to the list", new_list_bookmark_path(@list), class: 'btn btn-primary' %>
    </div>
  </div>
  <%= link_to "Return to list menu", lists_path, class: 'btn btn-primary' %>
</div>