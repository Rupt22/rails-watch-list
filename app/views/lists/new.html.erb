<div class="background">
  <h1>Please add a new list to the app <h1>

  <div class="container">
    <div class="row justify-content-center">
      <div class="col-xs-12 col-sm-10 col-sm-offset-1">
        <h1>Create a new list</h1>
        <%= simple_form_for @list do |f| %>
          <%= f.input :name, :label => 'Please enter your list name', :placeholder => 'List name' %>
          <%= f.input :description, :label => 'Please add a list description', :placeholder => 'List description' %>
          <%= f.input :photo, as: :file %>
          <%= f.submit class: 'btn btn-primary' %>
        <% end %>
        <%= link_to "Back to lists", lists_path, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>
